<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
  </PropertyGroup>
  <PropertyGroup>
    <NoWarn>0436</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\AElf\src\AElf.Common\AElf.Common.csproj" />
    <ProjectReference Include="..\AElf\src\AElf.Core\AElf.Core.csproj" />
    <ProjectReference Include="..\AElf\src\AElf.Cryptography\AElf.Cryptography.csproj" />
    <ProjectReference Include="..\AElf\src\AElf.CSharp.Core\AElf.CSharp.Core.csproj" />
    <ProjectReference Include="..\AElf\src\AElf.Kernel.Core\AElf.Kernel.Core.csproj" />
    <ProjectReference Include="..\AElf\src\AElf.Kernel.Types\AElf.Kernel.Types.csproj" />
    <ProjectReference Include="..\AElf\src\AElf.Sdk.CSharp\AElf.Sdk.CSharp.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="..\AElf\protobuf\acs3.proto">
      <Link>Protobuf/Proto/acs3.proto</Link>
    </Content>
    <Content Include="..\AElf\protobuf\common.proto">
      <Link>Protobuf/Proto/common.proto</Link>
    </Content>
    <Content Include="..\AElf\protobuf\crosschain.proto">
      <Link>Protobuf/Proto/crosschain.proto</Link>
    </Content>
    <Content Include="..\AElf\protobuf\cross_chain_contract.proto">
      <Link>Protobuf/Proto/cross_chain_contract.proto</Link>
    </Content>
    <Content Include="..\AElf\protobuf\kernel.proto">
      <Link>Protobuf/Proto/kernel.proto</Link>
    </Content>
    <Content Include="..\AElf\protobuf\aelf_options.proto">
      <Link>Protobuf/Proto/aelf_options.proto</Link>
    </Content>
    <Content Include="..\AElf\protobuf\parliament_auth_contract.proto">
      <Link>Protobuf/Proto/parliament_auth_contract.proto</Link>
    </Content>
    <Content Include="..\AElf\protobuf\resource.proto">
      <Link>Protobuf/Proto/c</Link>
    </Content>
    <Content Include="..\AElf\protobuf\vote_contract.proto">
      <Link>Protobuf/Proto/vote_contract.proto</Link>
    </Content>
    <Content Include="..\AElf\protobuf\election_contract.proto">
      <Link>Protobuf/Proto/election_contract.proto</Link>
    </Content>
    <Content Include="..\AElf\protobuf\profit_contract.proto">
      <Link>Protobuf/Proto/profit_contract.proto</Link>
    </Content>
    <Content Include="..\AElf\protobuf\token_contract_messages.proto">
      <Link>Protobuf/Proto/token_contract_messages.proto</Link>
    </Content>
    <Content Include="..\AElf\protobuf\token_contract.proto">
      <Link>Protobuf/Proto/token_contract.protot</Link>
    </Content>
    <Content Include="..\AElf\protobuf\token_converter_contract.proto">
      <Link>Protobuf/Proto/token_converter_contract.protot</Link>
    </Content>
    <Content Include="..\AElf\protobuf\basic_contract_zero.proto">
      <Link>Protobuf/Proto/basic_contract_zero.proto</Link>
    </Content>
    <Content Include="..\AElf\protobuf\aedpos_contract.proto">
      <Link>Protobuf/Proto/aedpos_contract.proto</Link>
    </Content>
  </ItemGroup>

  <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
    <Exec Condition="!$([MSBuild]::IsOsPlatform(Windows))" Command="protoc --proto_path=../AElf/protobuf vote_contract.proto election_contract.proto profit_contract.proto token_contract.proto token_converter_contract.proto aedpos_contract.proto parliament_auth_contract.proto resource.proto cross_chain_contract.proto --csharp_out=./Protobuf/Generated --csharp_opt=file_extension=.g.cs" />
    <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="protoc --proto_path=..\AElf\protobuf vote_contract.proto election_contract.proto profit_contract.proto token_contract.proto token_converter_contract.proto aedpos_contract.proto parliament_auth_contract.proto resource.proto cross_chain_contract.proto --csharp_out=.\Protobuf\Generated --csharp_opt=file_extension=.g.cs" />
  </Target>
  <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
    <ItemGroup>
      <Compile Include="./Protobuf/Generated/*.cs" />
    </ItemGroup>
  </Target>
  <ItemGroup>
    <Folder Include="Protobuf\Proto" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="MSTest.TestFramework" Version="1.4.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="protobuf-net" Version="2.4.0" />
    <PackageReference Include="Shouldly" Version="3.0.2" />
  </ItemGroup>
</Project>