<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageId>AElf.Contracts.TestContract.Basic1</PackageId>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="..\..\protobuf\common.proto">
            <Link>Protobuf/Proto/common.proto</Link>
        </Content>
        <Content Include="..\..\protobuf\kernel.proto">
            <Link>Protobuf/Proto/kernel.proto</Link>
        </Content>
        <Content Include="..\..\protobuf\aelf_options.proto">
            <Link>Protobuf/Proto/aelf_options.proto</Link>
        </Content>
        <Content Include="..\..\protobuf\test_basic.proto">
            <Link>Protobuf/Proto/test_basic.proto</Link>
        </Content>
        <Content Include="..\..\protobuf\test_basic1_contract.proto">
            <Link>Protobuf/Proto/test_basic1_contract.proto</Link>
        </Content>
        <Content Include="..\..\protobuf\basic_contract_zero.proto">
            <Link>Protobuf/Proto/basic_contract_zero.proto</Link>
        </Content>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\AElf.Sdk.CSharp\AElf.Sdk.CSharp.csproj" />
    </ItemGroup>

    <Target Name="Gen_proto" BeforeTargets="BeforeBuild">
        <Exec Condition="!$([MSBuild]::IsOsPlatform(Windows))" Command="../../scripts/generate_contract_reference.sh basic_contract_zero.proto ; ../../scripts/generate_contract_code.sh test_basic.proto test_basic1_contract.proto" />
        <Exec Condition="$([MSBuild]::IsOsPlatform(Windows))" Command="..\..\scripts\generate_contract_reference.bat basic_contract_zero.proto &amp; ..\..\scripts\generate_contract_code.bat test_basic.proto test_basic1_contract.proto" />
    </Target>
    <Target Name="UpdateGeneratedFiles" DependsOnTargets="Gen_proto" BeforeTargets="BeforeBuild">
        <ItemGroup>
            <Compile Include="./Protobuf/Generated/*.cs" />
        </ItemGroup>
    </Target>

</Project>
